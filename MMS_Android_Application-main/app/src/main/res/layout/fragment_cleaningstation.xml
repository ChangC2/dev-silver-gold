<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panelCleaningStation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_border_dark"
    android:orientation="vertical">

    <com.cam8.mmsapp.views.LatoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEANING STATION"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding3"
        android:textColor="@color/green"
        android:textSize="@dimen/font_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding9"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding3"
        android:layout_marginRight="@dimen/padding3"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/padding21"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginBottom="@dimen/padding2"
                android:background="@color/white" />

            <com.cam8.mmsapp.views.LatoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_partid"
                android:layout_marginLeft="@dimen/padding2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_7" />

            <com.cam8.mmsapp.views.LatoBoldTextView
                android:id="@+id/tvPartID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/padding12"
                android:layout_marginLeft="@dimen/padding1"
                android:text=""
                android:gravity="center"
                android:padding="@dimen/padding2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_5" />

            <LinearLayout
                android:id="@+id/btnLoginPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_qrcode_scan_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginRight="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_logout_app_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding3"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/padding21"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginBottom="@dimen/padding2"
                android:background="@color/white" />



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding1"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.cam8.mmsapp.views.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/padding7"
                    android:layout_height="@dimen/padding7"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding3"
                    android:gravity="center"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <com.cam8.mmsapp.views.LatoBoldTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="@dimen/padding12"
                    android:layout_marginLeft="@dimen/padding2"
                    android:layout_marginRight="@dimen/padding3"
                    android:gravity="center"
                    android:text="Unattended"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnScanUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_qrcode_scan_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginRight="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_logout_app_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginRight="@dimen/padding3"
        android:layout_marginBottom="@dimen/padding1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:background="@drawable/gradient_back"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/padding21"
                    android:layout_height="@dimen/padding5"
                    android:layout_marginTop="@dimen/padding2"
                    android:layout_marginBottom="@dimen/padding2"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.cam8.mmsapp.views.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_current_part_processing_time"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding2"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding2"
                        android:textSize="@dimen/font_7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding2"
                        android:layout_marginTop="@dimen/padding5"
                        android:layout_marginRight="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding4"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimerStart"
                            android:layout_width="@dimen/padding11"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_start_btn"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/title_start"
                            android:textAllCaps="false"
                            android:minHeight="@dimen/padding8"
                            android:textColor="@drawable/selector_start_button_text"
                            android:textSize="@dimen/font_6" />

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimeProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/transparent_color"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:minHeight="@dimen/padding10"
                            android:paddingHorizontal="@dimen/padding1"
                            android:text="00:00:00"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_time_logger_timer_text"
                            android:textSize="@dimen/font_tank_time" />

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimerStop"
                            android:layout_width="@dimen/padding11"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_stop_btn"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:minHeight="@dimen/padding8"
                            android:text="@string/title_stop"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_stop_button_text"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/padding1"
                android:background="@drawable/gradient_back"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/padding21"
                    android:layout_height="@dimen/padding5"
                    android:layout_marginTop="@dimen/padding2"
                    android:layout_marginBottom="@dimen/padding2"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.cam8.mmsapp.views.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_current_part_notes"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding2"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding2"
                        android:textSize="@dimen/font_7" />

                    <com.cam8.mmsapp.views.LatoEditText
                        android:id="@+id/tvNotes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/padding2"
                        android:layout_marginRight="@dimen/padding2"
                        android:hint="@string/hint_add_notes_here"
                        android:textSize="@dimen/font_8"
                        android:inputType="textMultiLine"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"
                        android:maxLines="10"
                        android:imeOptions="actionDone"
                        android:gravity="left|top"
                        android:padding="@dimen/padding1"
                        android:textColorHint="@color/white_trans50"
                        android:textColor="@color/white"
                        android:background="@color/transparent_color"
                        android:layout_marginBottom="@dimen/padding2">
                    </com.cam8.mmsapp.views.LatoEditText>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding1"
                    android:layout_marginRight="@dimen/padding1"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/padding21"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding1"
                            android:background="@color/green" />

                        <com.cam8.mmsapp.views.LatoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding6"
                            android:gravity="center"
                            android:text="@string/good_parts"
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_trans50"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding2">

                        <ImageView
                            android:id="@+id/iv_good_down"
                            android:layout_width="@dimen/width_goodsbad_part_button"
                            android:layout_height="@dimen/height_goodsbad_part_button"
                            android:layout_marginLeft="@dimen/padding2"
                            android:background="@drawable/rounded_border_stroke_green"
                            android:scaleType="fitCenter"
                            android:src="@drawable/downbtnback" />

                        <com.cam8.mmsapp.views.LatoTextView
                            android:id="@+id/tvGood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/green"
                            android:textSize="@dimen/font_6" />

                        <ImageView
                            android:id="@+id/iv_good_up"
                            android:layout_width="@dimen/width_goodsbad_part_button"
                            android:layout_height="@dimen/height_goodsbad_part_button"
                            android:layout_marginRight="@dimen/padding2"
                            android:background="@drawable/rounded_border_stroke_green"
                            android:scaleType="fitCenter"
                            android:src="@drawable/upbtnback" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding1"
                    android:layout_marginTop="@dimen/padding1"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/padding21"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/padding1"

                            android:background="@color/red" />

                        <com.cam8.mmsapp.views.LatoBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/padding6"
                            android:gravity="center"
                            android:text="@string/bad_parts"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white_trans50"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding2">

                        <ImageView
                            android:id="@+id/iv_bad_down"
                            android:layout_width="@dimen/width_goodsbad_part_button"
                            android:layout_height="@dimen/height_goodsbad_part_button"
                            android:layout_marginLeft="@dimen/padding2"
                            android:background="@drawable/rounded_border_stroke"
                            android:scaleType="fitCenter"
                            android:src="@drawable/downbtnred" />

                        <com.cam8.mmsapp.views.LatoTextView
                            android:id="@+id/tvBad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_6" />

                        <ImageView
                            android:id="@+id/iv_bad_up"
                            android:layout_width="@dimen/width_goodsbad_part_button"
                            android:layout_height="@dimen/height_goodsbad_part_button"
                            android:layout_marginRight="@dimen/padding2"
                            android:background="@drawable/rounded_border_stroke"
                            android:scaleType="fitCenter"
                            android:src="@drawable/upbtnred" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>