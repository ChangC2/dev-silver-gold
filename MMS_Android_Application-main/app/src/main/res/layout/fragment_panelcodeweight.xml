<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panelCleaningStation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_border_dark"
    android:orientation="vertical">

    <com.cam8.mmsapp.views.LatoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel Code Weight"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding3"
        android:textColor="@color/green"
        android:textSize="@dimen/font_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding9"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding3"
        android:layout_marginRight="@dimen/padding3"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding3"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/padding21"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginBottom="@dimen/padding2"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding1"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.cam8.mmsapp.views.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/padding7"
                    android:layout_height="@dimen/padding7"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding3"
                    android:gravity="center"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <com.cam8.mmsapp.views.LatoBoldTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="@dimen/padding14"
                    android:layout_marginLeft="@dimen/padding2"
                    android:layout_marginRight="@dimen/padding3"
                    android:gravity="center"
                    android:text="Unattended"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnScanUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_qrcode_scan_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginRight="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_logout_app_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginRight="@dimen/padding3"
        android:layout_marginBottom="@dimen/padding1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Stage1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage2"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage3"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Stage4"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage5"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage6"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Stage7"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage8"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnStage9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/padding3"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:minHeight="@dimen/padding8"
                android:text="Stage9"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.cam8.mmsapp.views.LatoButton
                android:id="@+id/btnDataLogSheet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_border_setting"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="Panel Data Log Sheet"
                android:textAllCaps="false"
                android:textColor="@drawable/selector_main_button_text_white"
                android:textSize="@dimen/font_6" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>