<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panelPaintStation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_border_dark"
    android:orientation="vertical">

    <com.cam8.mmsapp.views.LatoBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAINT STATION"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding3"
        android:textColor="@color/green"
        android:textSize="@dimen/font_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding9"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding3"
        android:layout_marginRight="@dimen/padding3"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/padding21"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginBottom="@dimen/padding2"
                android:background="@color/white" />

            <com.cam8.mmsapp.views.LatoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_partid"
                android:layout_marginLeft="@dimen/padding2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_7" />

            <com.cam8.mmsapp.views.LatoBoldTextView
                android:id="@+id/tvPartID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/padding12"
                android:layout_marginLeft="@dimen/padding1"
                android:text=""
                android:gravity="center"
                android:padding="@dimen/padding2"
                android:textColor="@color/white"
                android:textSize="@dimen/font_5" />

            <LinearLayout
                android:id="@+id/btnLoginPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_qrcode_scan_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginRight="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_logout_app_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding3"
            android:background="@drawable/gradient_back"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/padding21"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/padding2"
                android:layout_marginBottom="@dimen/padding2"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding1"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.cam8.mmsapp.views.CircleImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/padding7"
                    android:layout_height="@dimen/padding7"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding3"
                    android:gravity="center"
                    android:src="@drawable/profile"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp" />

                <com.cam8.mmsapp.views.LatoBoldTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:minWidth="@dimen/padding12"
                    android:layout_marginLeft="@dimen/padding2"
                    android:layout_marginRight="@dimen/padding3"
                    android:gravity="center"
                    android:text="Unattended"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnScanUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_qrcode_scan_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnLogoutUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/padding3"
                android:layout_marginRight="@dimen/padding2"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/padding5"
                    android:layout_height="@dimen/padding5"
                    app:srcCompat="@drawable/ic_logout_app_png" />

                <com.cam8.mmsapp.views.LatoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="@string/title_logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_9" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginRight="@dimen/padding3"
        android:layout_marginBottom="@dimen/padding1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_back"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/padding21"
                    android:layout_height="@dimen/padding5"
                    android:layout_marginTop="@dimen/padding2"
                    android:layout_marginBottom="@dimen/padding2"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.cam8.mmsapp.views.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_current_part_processing_time"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding2"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding2"
                        android:textSize="@dimen/font_7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding2"
                        android:layout_marginTop="@dimen/padding3"
                        android:layout_marginRight="@dimen/padding2"
                        android:layout_marginBottom="@dimen/padding2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimerStart"
                            android:layout_width="@dimen/padding11"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_start_btn"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/title_start"
                            android:textAllCaps="false"
                            android:minHeight="@dimen/padding8"
                            android:textColor="@drawable/selector_start_button_text"
                            android:textSize="@dimen/font_6" />

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimeProcessing"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/transparent_color"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:minHeight="@dimen/padding10"
                            android:paddingHorizontal="@dimen/padding1"
                            android:text="00:00:00"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_time_logger_timer_text"
                            android:textSize="@dimen/font_tank_time" />

                        <com.cam8.mmsapp.views.LatoButton
                            android:id="@+id/btnTimerStop"
                            android:layout_width="@dimen/padding11"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_stop_btn"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:minHeight="@dimen/padding8"
                            android:text="@string/title_stop"
                            android:textAllCaps="false"
                            android:textColor="@drawable/selector_stop_button_text"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding1"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/padding21"
                            android:layout_height="match_parent"
                            android:background="@color/blue" />

                        <com.cam8.mmsapp.views.LatoBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ambient"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/padding2"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvAmbientTemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 °F"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvAmbientHumidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 %"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvAmbientDewPoint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 F"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dew Point"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding1"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/padding21"
                            android:layout_height="match_parent"
                            android:background="@color/blue" />

                        <com.cam8.mmsapp.views.LatoBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paint Booth"
                            android:textColor="@color/blue"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/padding2"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/font_6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvPaintTemp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 °F"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temp"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvPaintHumidity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 %"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvPaintDewPoint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:layout_marginHorizontal="@dimen/padding1"
                                android:paddingVertical="@dimen/padding1"
                                android:text="0.0 F"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dew Point"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_20" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_back"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/padding21"
                    android:layout_height="@dimen/padding5"
                    android:layout_marginTop="@dimen/padding2"
                    android:layout_marginBottom="@dimen/padding2"
                    android:background="@color/blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.cam8.mmsapp.views.LatoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bitumen Usage"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/padding2"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/padding2"
                        android:textSize="@dimen/font_7" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/padding3"
                        android:layout_marginLeft="@dimen/padding2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Before"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/font_8"
                                android:textStyle="bold" />

                            <com.cam8.mmsapp.views.LatoEditText
                                android:id="@+id/tvBefore"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_textview_underline"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:paddingTop="@dimen/padding22"
                                android:paddingBottom="@dimen/padding22"
                                android:hint="0.0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                        </LinearLayout>

                        <com.cam8.mmsapp.views.LatoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oz"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_9"
                            android:layout_marginTop="@dimen/padding5"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/padding3"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="After"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/font_8"
                                android:textStyle="bold" />

                            <com.cam8.mmsapp.views.LatoEditText
                                android:id="@+id/tvAfter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_textview_underline"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:paddingTop="@dimen/padding22"
                                android:paddingBottom="@dimen/padding22"
                                android:hint="0.0"
                                android:textColor="@color/white"
                                android:textSize="@dimen/font_7" />

                        </LinearLayout>

                        <com.cam8.mmsapp.views.LatoLightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="oz"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_9"
                            android:layout_marginTop="@dimen/padding5"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/padding3"
                            android:orientation="vertical">

                            <com.cam8.mmsapp.views.LatoTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Used"
                                android:textColor="@color/blue"
                                android:textSize="@dimen/font_8"
                                android:textStyle="bold" />

                            <com.cam8.mmsapp.views.LatoTextView
                                android:id="@+id/tvUsed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_textview_underline"
                                android:gravity="center"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:maxLines="1"
                                android:paddingTop="@dimen/padding22"
                                android:paddingBottom="@dimen/padding22"
                                android:hint="0.0"
                                android:textColor="@color/white"
