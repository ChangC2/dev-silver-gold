<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/margin_10"
    android:paddingEnd="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:background="@drawable/bk_grey_stroke_10"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:src="@drawable/ic_avatar"
            android:layout_gravity="center"
            app:riv_corner_radius="@dimen/margin_10"
            app:riv_border_color="@color/main_blue_color"
            app:riv_border_width="@dimen/margin_1"
            android:padding="@dimen/margin_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtName"
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/imgOption"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_20"
                    android:paddingStart="@dimen/margin_10"
                    android:paddingEnd="@dimen/margin_10"
                    android:src="@drawable/ic_option"
                    android:rotation="90"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txtDescription"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_600"
                />
            <TextView
                android:id="@+id/txtUnit"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtCategory"
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main_blue_color"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/margin_10"/>
                <LinearLayout
                    android:id="@+id/btnStatusPending"
                    android:layout_width="@dimen/margin_70"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/bk_pending">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_10"
                        android:paddingEnd="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_3"
                        android:paddingBottom="@dimen/margin_3"
                        android:textSize="@dimen/text_11"
                        android:gravity="center"
                        android:textColor="@color/red_color"
                        android:text="@string/pending"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnStatusActive"
                    android:layout_width="@dimen/margin_70"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/bk_active">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/margin_10"
                        android:paddingEnd="@dimen/margin_10"
                        android:paddingTop="@dimen/margin_3"
                        android:paddingBottom="@dimen/margin_3"
                        android:textSize="@dimen/text_11"
                        android:gravity="center"
                        android:textColor="@color/green_color"
                        android:text="@string/active"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>