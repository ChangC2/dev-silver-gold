<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_10"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:padding="@dimen/margin_10"
    android:orientation="vertical"
    android:background="@drawable/bk_white_stroke_grey_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            style="@style/TextStyleNormalRegular"
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="asd"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgOption"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/margin_10"
            android:rotation="90"
            android:src="@drawable/ic_option" />
    </LinearLayout>
   <TextView
       style="@style/TextStyleNormalRegular"
       android:id="@+id/txtAddress"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/md_grey_700"
       android:text="asdasd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtReviewCnt"
            style="@style/TextStyleNormalRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_cnt"/>
        <TextView
            android:id="@+id/txtFollowerCnt"
            style="@style/TextStyleNormalRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:textColor="@color/green_color"
            android:text="@string/follower_cnt"/>
    </LinearLayout>
</LinearLayout>