<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:background="@drawable/bk_grey_stroke_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtOrder"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders_cnt"
                android:textColor="@color/main_blue_color"
                android:padding="@dimen/margin_10"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:background="@color/md_grey_400"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtPending"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:padding="@dimen/margin_10"
                android:layout_height="wrap_content"
                android:text="@string/txt_pending"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:layout_gravity="center"
                android:background="@color/md_grey_400"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtPickingOrder"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picking_order_cnt"
                android:padding="@dimen/margin_10"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:background="@color/md_grey_400"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtReadyCollect"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="@string/ready_for_collect_cnt"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:layout_gravity="center"
                android:background="@color/md_grey_400"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtDeliveringOrder"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:padding="@dimen/margin_10"
                android:layout_height="wrap_content"
                android:text="@string/delivering_order_cnt"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:background="@color/md_grey_400"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtFailedOrder"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="@string/failed_order_cnt"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <View
                style="@style/TextStyleNormalRegular"
                android:layout_width="1dp"
                android:layout_height="@dimen/margin_20"
                android:background="@color/md_grey_400"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"/>
            <TextView
                android:id="@+id/txtCompleted"
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_10"
                android:text="@string/completed_cnt"
                android:textColor="@color/md_grey_600"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/lytSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/bk_white_stroke_grey_30"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_15"
            android:src="@drawable/ic_search"
            app:tint="@color/md_grey_600"/>
        <EditText
            style="@style/TextStyleNormalRegular"
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="text"
            android:background="@color/transparent_color"
            android:gravity="start|center_vertical"
            android:hint="@string/enter_order_number"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_20"
            android:imeOptions="actionSearch"
            android:textColor="@color/grey_dark"
            android:textColorHint="@color/grey_light"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/imgClear"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            android:src="@drawable/ic_close_dark"
            app:tint="@color/red_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/lytEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_80"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_no_result" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>