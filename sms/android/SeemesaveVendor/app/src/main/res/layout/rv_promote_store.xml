<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/margin_10"
    android:paddingEnd="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15"
        android:background="@drawable/bk_grey_stroke_10"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/ckStatus"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_width="@dimen/margin_20"
            android:layout_height="@dimen/margin_20"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/margin_55"
            android:layout_height="@dimen/margin_55"
            android:src="@drawable/ic_avatar"
            app:riv_corner_radius="@dimen/margin_10"
            app:riv_border_color="@color/main_blue_color"
            app:riv_border_width="@dimen/margin_1"
            android:padding="@dimen/margin_1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtName"
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/product_searched"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txtAddress"
                style="@style/TextStyleNormalRegular"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_600"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_currency_dot"
                    android:textColor="@color/main_blue_color"
                    />
                <TextView
                    android:id="@+id/txtCurrency"
                    style="@style/TextStyleNormalRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:textColor="@color/main_blue_color"
                    android:text="Zar"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>