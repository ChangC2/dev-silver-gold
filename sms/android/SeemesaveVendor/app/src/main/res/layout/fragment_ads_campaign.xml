<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">
        <LinearLayout
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3"
            android:elevation="@dimen/margin_1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/bk_green_rect_10">
            <ImageView
                android:layout_width="@dimen/margin_10"
                android:layout_height="@dimen/margin_10"
                android:src="@drawable/ic_plus"
                app:tint="@color/white_color" />
            <TextView
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:textColor="@color/white_color"
                android:text="@string/create"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lytEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="@dimen/margin_10"
            android:background="@drawable/bk_grey_solid"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3">
            <ImageView
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:src="@drawable/ic_edit_dark"/>
            <TextView
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:layout_marginStart="@dimen/margin_5"
                android:text="@string/edit"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="@drawable/bk_grey_solid"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_15"
            android:paddingEnd="@dimen/margin_15"
            android:paddingTop="@dimen/margin_3"
            android:paddingBottom="@dimen/margin_3">

            <ImageView
                android:layout_width="@dimen/margin_15"
                android:layout_height="@dimen/margin_15"
                android:baselineAligned="false"
                android:src="@drawable/ic_delete_dark" />

            <TextView
                style="@style/TextStyleNormalRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_5"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="@string/delete" />
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/TextStyleNormalRegular"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_350"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>