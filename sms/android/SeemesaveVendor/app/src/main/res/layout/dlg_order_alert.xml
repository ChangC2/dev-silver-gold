<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/infoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/txt_new_order"
                        android:textColor="@color/black_color"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginStart="@dimen/margin_20"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_20">
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:textSize="@dimen/text_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You have"
                        />
                    <TextView
                        android:id="@+id/txtCollectCnt"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_blue_color"
                        android:text="11 click and orders"
                        android:layout_marginStart="@dimen/margin_10"
                        />
                    <TextView
                        android:id="@+id/txtDeliverCnt"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_blue_color"
                        android:text="11 click and orders"
                        android:layout_marginStart="@dimen/margin_10"
                        />
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:textSize="@dimen/text_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="to be processed."
                        />
                    <TextView
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="View this orders?"
                        />
                    <TextView
                        android:id="@+id/txtContinue"
                        style="@style/TextStyleNormalRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_blue_color"
                        android:text="Click here to check collect orders"
                        android:layout_marginStart="@dimen/margin_10"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_45"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btnYes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/txt_remind_later"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:textColor="@color/main_blue_color"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    tools:ignore="MissingConstraints"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>