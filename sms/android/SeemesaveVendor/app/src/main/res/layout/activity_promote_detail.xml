<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btBack"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/margin_15"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/TextStyleLargeRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_promote_detail"
            android:textColor="@color/grey_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_20">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/margin_20"
                android:paddingEnd="@dimen/margin_20"
                android:orientation="vertical">
                <TextView
                    style="@style/TextStyleNormalRegular"
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    />
                <TextView
                    style="@style/TextStyleNormalRegular"
                    android:id="@+id/txtType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_135">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:riv_border_color="@color/grey_white"
                        app:riv_border_width="1px"
                        app:riv_corner_radius="10dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignBottom="@+id/imgProduct"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10">
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:id="@+id/txtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_15"
                            android:textStyle="bold"
                            />
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:id="@+id/txtPeriod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:id="@+id/lytStore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_600"
                            android:text="@string/txt_selected_stores"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/storeView"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                            android:id="@+id/storeIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:dotColor="@color/md_grey_300"
                            app:selectedDotColor="@color/colorAccent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytSingle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_600"
                            android:text="@string/txt_single_product"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/singleView"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                            android:id="@+id/singleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:dotColor="@color/md_grey_300"
                            app:selectedDotColor="@color/colorAccent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytCombo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_600"
                            android:text="@string/txt_combo_product"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/comboView"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                            android:id="@+id/comboIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:dotColor="@color/md_grey_300"
                            app:selectedDotColor="@color/colorAccent"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lytBuy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextStyleNormalRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/md_grey_600"
                            android:text="@string/txt_buyget_product"
                            />
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/buyView"
                            android:layout_marginTop="@dimen/margin_5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
                            android:id="@+id/buyIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:dotColor="@color/md_grey_300"
                            app:selectedDotColor="@color/colorAccent"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>