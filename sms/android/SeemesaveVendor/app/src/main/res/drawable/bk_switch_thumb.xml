            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/transparent_color"/>
                    <size android:width="@dimen/margin_20"
                        android:height="@dimen/margin_20"/>
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/transparent_color"/>
                    <size android:width="@dimen/margin_20"
