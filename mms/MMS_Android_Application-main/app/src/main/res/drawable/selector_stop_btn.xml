<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_color" />
            <corners android:radius="@dimen/padding1" />
            <stroke android:width="2dp" android:color="@color/gray"></stroke>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_trans90" />
            <corners android:radius="@dimen/padding1" />
            <stroke android:width="2dp" android:color="@color/red"></stroke>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_trans90" />
            <corners android:radius="@dimen/padding1" />
            <stroke android:width="2dp" android:color="@color/red"></stroke>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_color" />
            <corners android:radius="@dimen/padding1" />
            <stroke android:width="2dp" android:color="@color/red"></stroke>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_color" />
            <corners android:radius="@dimen/padding1" />
            <stroke android:width="2dp" android:color="@color/red"></stroke>
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
        </shape>
    </item>
</selector>