<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding11"
        android:background="@color/colorPrimaryLight"
        android:gravity="center"
        android:paddingLeft="@dimen/padding3"
        android:paddingRight="@dimen/padding3"
        android:text="@string/dialog_logout_title"
        android:drawableLeft="@drawable/ic_logo_small"
        android:drawablePadding="@dimen/padding2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_3" />

    <com.cam8.mmsapp.views.LatoTextView
        android:id="@+id/sub_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/padding3"
        android:layout_marginTop="@dimen/padding4"
        android:layout_marginEnd="@dimen/padding3"
        android:layout_marginBottom="@dimen/padding1"
        android:gravity="center_horizontal"
        android:text="@string/dialog_logout_message"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic" />

</LinearLayout>