<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303036">

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.cam8.mmsapp.views.TouchImageView
            android:id="@+id/ivPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/padding6"
            android:layout_height="@dimen/padding6"
            android:layout_margin="@dimen/padding2"
            app:srcCompat="@drawable/selector_backbtn" />

    </FrameLayout>

</RelativeLayout>
