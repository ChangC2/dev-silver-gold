<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/width_common_dialog"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding2"
        android:layout_marginStart="@dimen/padding2"
        android:layout_gravity="center"
        android:elevation="@dimen/padding21"
        android:gravity="center"
        android:orientation="vertical"
        app:cardBackgroundColor="#c0303030"
        app:cardCornerRadius="@dimen/padding3"
        app:contentPadding="@dimen/padding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding1"
            android:orientation="vertical">

            <com.cam8.mmsapp.views.LatoTextView
                android:id="@+id/tvAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/padding9"
                android:padding="@dimen/padding2"
                android:text="ERROR ERROR ERROR ERROR ERROR ERROR ERROR"
                android:gravity="left|top"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_5" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnCloseAlert"
            android:layout_width="@dimen/padding5"
            android:layout_height="@dimen/padding5"
            android:layout_gravity="end|top"
            android:src="@drawable/selector_close_alert_btn"/>

    </androidx.cardview.widget.CardView>

</FrameLayout>